{
  "name": "sveltepack",
  "description": "A cli svelte compiler that works with snowpack",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "serve --listen 8080 --single dist",
    "build": "npm run clean && node scripts/compile.js",
    "build:prod": "NODE_ENV=production npm run build",
    "clean": "rm -rf dist && mkdir dist && cp -R public/* dist",
    "format": "prettier **/*.{js,jsx,ts,tsx,css,html,json,yml} --write --ignore-path .gitignore",
    "lint": "eslint . --ignore-pattern dist"
  },
  "dependencies": {
    "chokidar": "^3.3.1",
    "p-debounce": "^2.1.0",
    "snowpack": "^1.0.5"
  },
  "devDependencies": {
    "@jakedeichert/eslint-config": "^4.0.5",
    "prettier": "^1.16.1",
    "serve": "^11.1.0",
    "svelte": "^3.7.1"
  },
  "peerDependencies": {
    "svelte": "^3.7.1"
  }
}
